<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:focusableInTouchMode="false">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/sans_regular"
            android:text="Upcoming Events"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/sans_regular"
            android:text="See All"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_home"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="4dp"
           app:layout_constraintTop_toBottomOf="@+id/text_view_events"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:fontFamily="@font/sans_regular"
            android:text="Challenge a Friend"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintTop_toBottomOf="@+id/recycler_home"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_see_all_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sans_regular"
            android:text="See All"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_home" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/padding_12"
            android:background="@drawable/bg_white_circle"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_add"
            app:layout_constraintBottom_toTopOf="@+id/text_view_followed"
            app:layout_constraintRight_toLeftOf="@+id/recycler_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_challenge"
            app:layout_constraintVertical_bias="0.357" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_profile"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_followed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_profile"
            app:layout_constraintTop_toBottomOf="@+id/text_view_see_all_second" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_followed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:fontFamily="@font/sans_regular"
            android:text="Followed Categories"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintTop_toBottomOf="@+id/recycler_profile"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_see_all_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sans_regular"
            android:text="See All"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_body_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_profile" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/margin_8"
            app:layout_constraintTop_toBottomOf="@+id/text_view_followed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

