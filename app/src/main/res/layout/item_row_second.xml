<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        app:cardCornerRadius="@dimen/margin_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_second_list"
                android:layout_width="122dp"
                android:layout_height="87dp"
                android:src="@drawable/bg_reverse_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_second_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sc"

                app:layout_constraintStart_toStartOf="@+id/image_view_second_list"
                app:layout_constraintTop_toTopOf="@+id/image_view_second_list"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_second_list"
                app:layout_constraintEnd_toEndOf="@+id/image_view_second_list" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_second_list"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/sans_bold"
                android:gravity="center"
                android:text="Phyics"
                android:textColor="#1E1F36"
                android:textSize="@dimen/text_body_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/image_view_list"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>
