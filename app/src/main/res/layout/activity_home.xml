<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.app.home.HomeActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_62"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_header"
        app:layout_constraintBottom_toTopOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_marginStart="@dimen/margin_60"
        android:layout_marginEnd="@dimen/margin_60"
        android:background="@color/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

    <!--    first step ..## -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_100"
        android:background="@color/bg_view"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_1"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:layout_marginBottom="@dimen/margin_4"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="0"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_2"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="1"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_3"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="2"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_4"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="3"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_5"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:background="@color/app_background"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:onClick="tapped"
            android:tag="4"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_6"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="5"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_7"
            android:layout_width="@dimen/layout_90"
            android:layout_height="@dimen/layout_90"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="6"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_8"
            android:layout_height="@dimen/layout_90"
            android:layout_width="@dimen/layout_90"
            android:background="@color/app_background"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:onClick="tapped"
            android:tag="7"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_9"
            android:layout_height="@dimen/layout_90"
            android:layout_width="@dimen/layout_90"
            android:background="@color/app_background"
            android:onClick="tapped"
            android:tag="8"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>