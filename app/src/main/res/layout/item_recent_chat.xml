<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_pro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginStart="@dimen/margin_16"
        android:src="@drawable/ic_user"
        android:paddingTop="@dimen/padding_12"
        app:civ_border_width="0dp"
        android:background="@drawable/bg_white_circle"
        app:civ_border_color="#ECECF3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_hader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"

        android:text="Maria Garcia"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/image_view_pro"
        android:textColor="@color/text_color_body"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="Contact your popular belief"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/image_view_pro"
        android:textColor="@color/text_color_body"
        app:layout_constraintTop_toBottomOf="@+id/text_hader" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_4"
        android:text="12.02 am"
        android:textSize="15sp"
        android:textColor="@color/text_color_body"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>

</layout>